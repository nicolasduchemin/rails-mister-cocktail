<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.9) 0%, rgba(0,36,61,0.6) 30%), url('https://static.pexels.com/photos/48720/pexels-photo-48720.jpeg');">
  <div class="banner-content">
    <h1>FABULOUS COCKTAILS</h1>
  </div>
</div>

<% @cocktails.each do |r| %>
<div class="col-xs-12 col-sm-4">
  <% if r.photo? %>
<div class="card-header" style="background-image: url('<%= image_path r.photo%>')">
</div>
<% else %>
<div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
</div>
<% end %>
    <div class="card-description">
     <h2><%= link_to r.name.upcase, cocktail_path(r) %></h2>
   </div>
     
  </div>
</div>



<% end %>