<div class="container">
  <div class="row"></div>
    <div class="col-md-6 col-md-offset-3">
      <h1>Doses</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.error_notification %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, as: :select, collection: @ingredients %>
        <%= f.button :submit, class: 'ui primary button' %><%= link_to "Return to the List", cocktail_path(@cocktail), class: "ui button" %>
      <% end %>
    </div>
  </div>
</div>